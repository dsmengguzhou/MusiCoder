<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ms.awe.musicoder">

    <!--有网络请求要开启网络权限-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_ha"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_ha"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RecyclerActivity" />
        <activity
            android:name=".activity.LineActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SmoothLineActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.GridActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.StaggeredActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RecyclerDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MaterialActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginSuccessActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AnswerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ms.awe.musicoder.activity.AnswerQuestionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>